@page "/Events/Create"
@model CreateModel;
@{
    ViewData["Title"] = "Create Event";
}

<h1>Create Event</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="InsertModel.Name">Name:</label>
        <input asp-for="InsertModel.Name" class="form-control" />
        <span asp-validation-for="InsertModel.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InsertModel.Location">Location:</label>
        <input asp-for="InsertModel.Location" class="form-control" />
        <span asp-validation-for="InsertModel.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InsertModel.Date">Date:</label>
        <input type="date" asp-for="InsertModel.Date" class="form-control" />
        <span asp-validation-for="InsertModel.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InsertModel.Description">Description:</label>
        <input asp-for="InsertModel.Description" class="form-control" />
        <span asp-validation-for="InsertModel.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Upload">Image (Optional):</label>
        <input type="file" id="Upload" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>