@using Microsoft.AspNetCore.Identity
@using Affinity_Affairs.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="LoginPartialNav" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)</a>
    <form id="logoutForm" class="LoginPartialNav" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button class="btn btn-secondary LoginPartialNav " id="logout" type="submit">Logout</button>
    </form>
}
else
{
    <a class="LoginPartialNav" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="LoginPartialNav" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

